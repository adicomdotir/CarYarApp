<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sea_light"
    android:padding="10dp"
    tools:context=".MainActivity" >

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:gravity="left"
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
        android:layout_weight="1">

       <RadioGroup
           android:id="@+id/radioGroup1"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="0.46"
           android:orientation="horizontal"
           android:gravity="center">

           <com.cengalabs.flatui.views.FlatRadioButton
               android:id="@+id/radio0"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="true"
               android:text="@string/gus"
               android:textSize="16sp"
               app:fl_size="24dp"
               app:fl_dotMargin="3dp"
               android:gravity="center" />

           <LinearLayout
               android:layout_width="24dp"
               android:layout_height="match_parent" />

           <com.cengalabs.flatui.views.FlatRadioButton
               android:id="@+id/radio1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="false"
               android:text="@string/benzin"
               android:textSize="16sp"
               app:fl_size="24dp"
               app:fl_dotMargin="3dp"/>

       </RadioGroup>

       <com.cengalabs.flatui.views.FlatTextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="center"
           android:gravity="center"
           android:text="نوع سوخت"
           android:textSize="16sp"/>

   </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatButton
            android:textSize="18sp"
            android:id="@+id/btnDate"
            android:layout_width="0dp"
            android:layout_height="44dp"
            app:fl_touchEffect="fl_ripple"
            app:fl_blockButtonEffectHeight="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7" />

        <com.cengalabs.flatui.views.FlatTextView
            android:textSize="18sp"
            android:text="تاریخ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:layout_weight="0.3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="number"
            app:fl_fieldStyle="fl_box"
            android:gravity="center"
            android:hint="هزینه" />

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="هزینه"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="0dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:ems="0"
            app:fl_fieldStyle="fl_box"
            android:gravity="center"
            android:hint="کیلومتر" />

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="کیلومتر"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:layout_weight="1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="0dp">

        <com.cengalabs.flatui.views.FlatButton
            android:text="مدیریت"
            android:textSize="18sp"
            android:id="@+id/button2"
            android:layout_width="96dp"
            android:layout_height="44dp"
            app:fl_touchEffect="fl_ripple"
            app:fl_blockButtonEffectHeight="1dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"/>

        <com.cengalabs.flatui.views.FlatButton
            android:text="ثبت"
            android:textSize="18sp"
            android:id="@+id/btnInsert"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatButton
            android:text="گزارش"
            android:textSize="18sp"
            android:id="@+id/btnReport"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_margin="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.cengalabs.flatui.views.FlatTextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tv_total"
                    android:textStyle="normal|bold"
                    android:layout_weight="1"/>

                <com.cengalabs.flatui.views.FlatTextView
                    android:gravity="center"
                    android:text="کل هزینه"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.cengalabs.flatui.views.FlatTextView
                    android:id="@+id/tv_total_benz"
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:layout_weight="1" />

                <com.cengalabs.flatui.views.FlatTextView
                    android:gravity="center"
                    android:text="هزینه بنزین"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.cengalabs.flatui.views.FlatTextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:id="@+id/tv_total_gus"
                    android:layout_weight="1" />

                <com.cengalabs.flatui.views.FlatTextView
                    android:gravity="center"
                    android:text="هزینه گاز"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.cengalabs.flatui.views.FlatTextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:id="@+id/tv_total_km"
                    android:layout_weight="1" />

                <com.cengalabs.flatui.views.FlatTextView
                    android:gravity="center"
                    android:text="مسافت طی شده"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

    </LinearLayout>



</LinearLayout>
