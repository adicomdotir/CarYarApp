<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ir.adicom.caryar.EditAcitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/rgEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.46"
            android:orientation="horizontal"
            android:gravity="center">

            <com.cengalabs.flatui.views.FlatRadioButton
                android:id="@+id/radiobutton01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/gus"
                android:textSize="16sp"
                app:fl_size="24dp"
                app:fl_dotMargin="3dp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <com.cengalabs.flatui.views.FlatRadioButton
                android:id="@+id/radiobutton02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/benzin"
                android:textSize="16sp"
                app:fl_size="24dp"
                app:fl_dotMargin="3dp"/>

        </RadioGroup>

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="نوع سوخت"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatButton
            android:textSize="18sp"
            android:id="@+id/btnDate"
            android:layout_width="0dp"
            android:layout_height="44dp"
            app:fl_touchEffect="fl_ripple"
            app:fl_blockButtonEffectHeight="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7" />

        <com.cengalabs.flatui.views.FlatTextView
            android:textSize="18sp"
            android:text="تاریخ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:layout_weight="0.3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/edtCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="number"
            app:fl_fieldStyle="fl_box"
            android:gravity="center" />

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="هزینه"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="0dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/edtKm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:ems="0"
            app:fl_fieldStyle="fl_box"
            android:gravity="center" />

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="کیلومتر"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:layout_weight="1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="0dp">

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btnEdit"
            android:background="@drawable/button_shape"
            android:text="ویرایش"
            android:textSize="18sp"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp" />

        <com.cengalabs.flatui.views.FlatButton
            android:textSize="18sp"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_theme="@array/blood"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp"
            android:id="@+id/btnDelete"
            android:background="@drawable/button_delete"
            android:text="حذف"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:layout_weight="1">

    </LinearLayout>

</LinearLayout>
