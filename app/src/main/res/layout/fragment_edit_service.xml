<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grape_light"
    tools:context="ir.adicom.caryar.EngineOilActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1"
        android:gravity="center">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/edtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="text"
            app:fl_fieldStyle="fl_box"
            android:gravity="center"
            android:hint="عنوان اختیاری هست" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:text="عنوان"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.cengalabs.flatui.views.FlatButton
            android:textSize="18sp"
            android:id="@+id/btnDate"
            android:layout_width="0dp"
            android:layout_height="44dp"
            app:fl_touchEffect="fl_ripple"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7" />

        <com.cengalabs.flatui.views.FlatTextView
            android:textSize="18sp"
            android:text="تاریخ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="normal|bold"
            android:layout_weight="0.3" />


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/edt_price_expert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="number"
            app:fl_fieldStyle="fl_box"
            android:gravity="center"
            android:hint="هزینه دستمزد" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:text="هزینه دستمزد"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1">

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/edt_price_part"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:ems="0"
            app:fl_fieldStyle="fl_box"
            android:gravity="center"
            android:hint="هزینه قطعات" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:text="هزینه قطعات"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.cengalabs.flatui.views.FlatButton
            android:text="حذف"
            android:textSize="18sp"
            android:id="@+id/btn_delete"
            android:layout_width="96dp"
            android:layout_height="44dp"
            app:fl_touchEffect="fl_ripple"
            app:fl_blockButtonEffectHeight="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"/>

        <com.cengalabs.flatui.views.FlatButton
            android:text="ویرایش"
            android:textSize="18sp"
            android:id="@+id/btn_edit"
            android:layout_width="96dp"
            android:layout_height="44dp"
            app:fl_touchEffect="fl_ripple"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

    </LinearLayout>

</LinearLayout>
