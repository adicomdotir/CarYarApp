<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:gravity="left"
       android:paddingLeft="5dp"
       android:paddingRight="5dp" >

       <RadioGroup
           android:id="@+id/radioGroup1"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_gravity="left"
           android:layout_weight="0.46"
           android:orientation="horizontal"
           android:gravity="center_vertical">

           <com.cengalabs.flatui.views.FlatRadioButton
               android:layout_marginLeft="10dp"
               android:id="@+id/radio0"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="true"
               android:text="گاز"
               android:textSize="16sp"
               app:fl_size="24dp"
               app:fl_dotMargin="3dp" />

           <com.cengalabs.flatui.views.FlatRadioButton
               android:layout_marginLeft="10dp"
               android:id="@+id/radio1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="true"
               android:text="بنزین"
               android:textSize="16sp"
               app:fl_size="24dp"
               app:fl_dotMargin="3dp" />

       </RadioGroup>

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="right"
           android:gravity="center"
           android:text="نوع سوخت"
           android:textSize="16sp" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="number"
            app:fl_fieldStyle="fl_box"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="هزینه"
            android:textColor="#1C2236"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="0dp" >

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:ems="0"
            app:fl_fieldStyle="fl_box"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="کیلومتر"
            android:textColor="#1C2236"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/calander_layout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dp" >

        <com.cengalabs.flatui.views.FlatButton
            android:text="مدیریت"
            android:textSize="18sp"
            android:id="@+id/button2"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp" />

        <com.cengalabs.flatui.views.FlatButton
            android:text="ثبت"
            android:textSize="18sp"
            android:id="@+id/btnInsert"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dp" >

        <com.cengalabs.flatui.views.FlatButton
            android:text="گزارش"
            android:textSize="18sp"
            android:id="@+id/btnReport"
            android:layout_width="96dp"
            android:layout_height="44dp"
            fl_touchEffect="fl_ripple"
            fl_blockButtonEffectHeight="3dp"
            android:layout_margin="5dp" />

    </LinearLayout>

    <TextView
        android:textColor="@color/main_color_stroke"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tv_total"
        android:textStyle="normal|bold" />

    <TextView
        android:textColor="@color/main_color_stroke"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:id="@+id/tv_total_km" />



</LinearLayout>
